<UserControl x:Class="amFlowDoczBase.Controls.StandardToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c="clr-namespace:Albert.Standard.Win32;assembly=AlbertWPF"
             xmlns:local="clr-namespace:amFlowDoczBase.Controls"
             mc:Ignorable="d" 
             Height="30" d:DesignWidth="800">


    <!-- Main ToolBar -->
    <ToolBar x:Name="mainToolBar" Height="30" >

        <Button ToolTip="Go to Start View" Command="c:DesktopCommands.StartView">
            <Image Source="/Assets/appbar/start.png" />
        </Button>
        <Button ToolTip="Add New Item" Command="New">
            <Image Source="/Assets/appbar/add.png" />
        </Button>

        <Button ToolTip="Open a File" Command="Open">
            <Image Source="/Assets/appbar/file.png" />
        </Button>


        <Button ToolTip="Save a File" Command="Save">
            <Image Source="/Assets/appbar/save.png" />
        </Button>

    </ToolBar>
</UserControl>
