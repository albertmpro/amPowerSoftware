<c:DialogControl x:Class="amSparkDesk.View.StaticWebStarter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:amSparkDesk.View"
             xmlns:c="clr-namespace:Albert.Standard.Win32;assembly=AlbertWPF"
				 Width="500"
			 mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="7">
		<StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
			<TextBlock Text="Title:" />
			<TextBox x:Name="txtTitle" />
			<TextBlock Text="Description:" />
			<TextBox x:Name="txtDescript" />
			<TextBlock Text="Keywords:" />
			<TextBox x:Name="txtKeywords" />



		</StackPanel>     
    </Grid>
	<!-- Bottom Bar -->
	<c:DialogControl.BottomBar>
		<StackPanel Orientation="Horizontal"
>
			<c:PushButton Content="Ok" />
			<c:PushButton Content="Cancel" />
		</StackPanel>	</c:DialogControl.BottomBar>
</c:DialogControl>
